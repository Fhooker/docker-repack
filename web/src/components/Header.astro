---
import { Image } from "astro:assets";
import logo from "../media/logo.png";

let base_url = import.meta.env.BASE_URL;
if (!base_url.endsWith("/")) {
  base_url += "/";
}

export const SITE_NAME = "Docker Repack";
---

<nav class="bg-white border-gray-200 dark:bg-gray-900 mb-4">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a
      href={new URL(`${base_url}`, Astro.url)}
      class="flex items-center space-x-3 rtl:space-x-reverse"
    >
      <Image src={logo} alt="Logo" width="50" quality={"max"} />
      <span class="self-center font-semibold whitespace-nowrap dark:text-white"
        >{SITE_NAME}</span
      >
    </a>
    <div class="block w-auto" id="navbar-default">
      <a
        href={new URL(`${base_url}`, Astro.url)}
        class="p-1 bg-white dark:text-white dark:bg-gray-900 dark:border-gray-700"
      >
        Home
      </a>

      <a
        href={new URL(`${base_url}benchmarks`, Astro.url)}
        class="p-1 bg-white dark:text-white dark:bg-gray-900 dark:border-gray-700"
      >
        Benchmarks
      </a>
    </div>
  </div>
</nav>
